<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserActivity">
    <!--path-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_img"
            android:rotation="180"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_arrow_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EEEEEE"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/default_avatar_2"
                    android:layout_gravity="center"
                    app:riv_oval="true"
                    android:id="@+id/user_img" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#E47833"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="更换头像"
                    android:id="@+id/username"/>

                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_id_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="账号ID"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_id"
                        android:text="12366478"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_name_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="账号昵称"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_name"
                        android:text="你好"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_introduce_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="自我介绍"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_introduce"
                        android:text="啦啦啦啦啦啦啦啦"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_sex_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="性别"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_sex"
                        android:text="男/女"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_age_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="年龄"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_age"
                        android:text="18"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_interest_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="兴趣"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_interest"
                        android:text="选择你感兴趣的领域"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
                <include layout="@drawable/bottom_border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/user_sign_layout"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="个性签名"
                        android:textColor="@color/black"
                        android:layout_height = "wrap_content"
                        android:layout_weight = "1"
                        android:layout_width = "wrap_content"/>
                    <TextView
                        android:id="@+id/user_sign"
                        android:text="这个是签名"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/icon_arrow"
                        android:layout_height="15dp"
                        android:layout_width="15dp" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</LinearLayout>