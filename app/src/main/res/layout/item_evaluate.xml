<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@drawable/border_radius"
    android:clipChildren="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/default_avatar_2"
                    android:layout_gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="10dp"
                    app:riv_oval="true"
                    android:layout_marginRight="15dp"
                    android:id="@+id/user_concern_img" />
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/user_concern_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RecyclerViewItem"
                        android:layout_marginTop="1dp"
                        android:textColor="#000000"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="8dp"
                    android:outlineProvider="none"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:text="交易成功"
                    android:textColor="#FA5C27"
                    android:textSize="12dp"
                    android:layout_width="75dp"
                    android:layout_height="28dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="100dp">
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/good_item_post_img"
                    android:scaleType="fitXY"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/icon_iphone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_concern"
                android:orientation="vertical"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/good_item__post_title"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginRight="8dp"
                        android:maxLines="2"
                        android:text="手机二手便宜平价出"
                        android:layout_marginBottom="5dp"
                        android:textColor="#333"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实付款 "
                        android:textColor="@color/app_color_9b"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/app_color_black"
                        android:textSize="10dp"
                        />
                    <TextView
                        android:id="@+id/goods_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1300"
                        android:textColor="@color/app_color_black"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp">
                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="65dp"
                            android:layout_height="28dp"
                            android:text="联系买家"
                            android:background="@drawable/shape_btn_concern"
                            android:textSize="12sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="match_parent">
                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_width="65dp"
                            android:layout_height="28dp"
                            android:text="去评价"
                            android:background="@drawable/shape_btn_concern"
                            android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>