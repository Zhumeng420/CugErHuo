<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <com.scwang.smart.refresh.layout.SmartRefreshLayout
       android:id="@+id/refresh_parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent">
       <!--        头部下拉刷新-->
       <com.scwang.smart.refresh.header.ClassicsHeader
           app:srlAccentColor="@color/orange"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

    <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:padding="10dp">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginTop="5dp"
                       android:gravity="center"
                       android:textSize="12sp"
                       android:text="自由市场商品由个人发货，未经官方验货，请自行交流购买"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_phone"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="手机"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_digital"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="数码"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_makeup"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="美妆"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_four"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="四坑"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_starperimeter"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="明星周边"/>
                       </LinearLayout>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_baby"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="母婴"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_game"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="游戏"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_play"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="潮玩动漫"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_car"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="交通工具"/>
                       </LinearLayout>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="10dp">
                           <ImageView
                               android:layout_width="40dp"
                               android:layout_height="40dp"
                               android:src="@drawable/icon_fridge"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="5dp"
                               android:gravity="center"
                               android:textSize="12sp"
                               android:text="家电"/>
                       </LinearLayout>
                   </LinearLayout>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:descendantFocusability="blocksDescendants">

                       <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/display_good_block"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="2dp"
                           android:layout_weight="1"/>
                   </RelativeLayout>


               </LinearLayout>

           </LinearLayout>


       </ScrollView>

   </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>